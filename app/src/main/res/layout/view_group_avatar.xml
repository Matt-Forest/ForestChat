<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="com.forest.forestchat.ui.common.avatar.GroupAvatarView">

    <FrameLayout
        android:id="@+id/avatarBackgroundFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".75">

        <com.forest.forestchat.ui.common.avatar.AvatarView
            android:id="@+id/avatarBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/avatarForegroundFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/background"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent=".75">

        <com.forest.forestchat.ui.common.avatar.AvatarView
            android:id="@+id/avatarForeground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</merge>